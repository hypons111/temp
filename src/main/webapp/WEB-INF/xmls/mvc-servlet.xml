<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

	<!-- 支援 annotation -->
	<context:annotation-config />
	<!-- 支援 mvc annotation -->
	<mvc:annotation-driven />
	<!-- component 搜尋範圍 -->
	<context:component-scan base-package="springMVC" />

	<!-- 用 name="地址" 可以使用 name="controller" -->
	<bean id="helloController" name="/hello.controller"
		class="springMVC.controller.HelloController" />

	<!-- 讀取 WEB-INF jsp -->
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/pages/" />
		<property name="suffix" value=".jsp" />
		<property name="order" value="6" />
	</bean>

	<mvc:view-controller path="/"
		view-name="redirect:membersmain.controller" />
	<mvc:view-controller path="/resourcesAction"
		view-name="staticResources" />

	<bean id="jsonView"
		class="org.springframework.web.servlet.view.json.MappingJackson2JsonView">
		<property name="prettyPrint" value="true" />
	</bean>

	<bean id="jaxb"
		class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
		<property name="packagesToScan" value="tw.leonchen" />
	</bean>

	<bean id="contentViewResolver"
		class="org.springframework.web.servlet.view.ContentNegotiatingViewResolver">
		<property name="defaultViews">
			<list>
				<ref bean="jsonView" />
			</list>
		</property>
	</bean>

	<bean id="multipartResolver"
		class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="defaultEncoding" value="UTF-8" />
	</bean>



	<!-- 使用動態資源 -->
	<mvc:resources location="/WEB-INF/resources/images/" mapping="/images/**" />
	<mvc:resources location="/WEB-INF/resources/css/" mapping="/css/**" />
	<mvc:resources location="/WEB-INF/resources/js/" mapping="/js/**" />


</beans>
